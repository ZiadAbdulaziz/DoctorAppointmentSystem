@using DoctorAppointmentSystem.Models;

@{
    ViewBag.Title = "Registeration1";
}
@model Client

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <h2>Registeration</h2>

    <form action="/UserRegisteration/Registeration" method="post">
        <div class="form-group">
            <label class="form-label"><b>Name</b></label>
            <input class="form-control" type="text" name="name" placeholder="Your name.." required>
        </div>

        <div class="form-group">
            <input class="form-control" type="number" name="id" hidden />
        </div>

        <div class="form-group">
            <label class="form-label"><b>Password</b></label>
            <input class="form-control" type="password" name="password" placeholder="Password" required>
        </div>

        <div class="form-group">
            <label class="form-label"><b>Email</b></label>
            <input class="form-control" type="text" name="email" placeholder="Enter Email" required>
        </div>

        <div class="form-group">
            <p><b>What is your gender?</b></p>
            <input type="radio" name="gender" value="m"> Male
            <input type="radio" name="gender" value="f"> Female
        </div>

        <div class="form-group">
            <label class="form-label"><b>Age</b></label>
            <input class="form-control" type="number" name="age" placeholder="Enter your age" value="age" min="1" max="100" required />
        </div>

        <button class="btn btn-info" type="submit"> <b>Submit</b></button>

    </form>

</body>

</html>
