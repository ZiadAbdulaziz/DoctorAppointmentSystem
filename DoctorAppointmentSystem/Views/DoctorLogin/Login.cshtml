@{ 
    Layout = "~/Views/Shared/ForDoctorLayout.cshtml";
}
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<form action="/DoctorLogin/Login" method="post">
    <small class="text-danger">@ViewBag.ErrorMessage</small>
    <div class="form-group">
        <label class="form-label" for="exampleInputEmail1"><b>Email address</b></label>
        <input class="form-control" type="email" id="exampleInputEmail1" placeholder="Email" name="email">
    </div>
    <div class="form-group">
        <label class="form-label" for="exampleInputPassword1"><b>Password</b></label>
        <input class="form-control" type="password" id="exampleInputPassword1" placeholder="Password" name="password">
    </div>
    <button type="submit" class="btn btn-info">
        <b>Submit</b>
    </button>
</form>

