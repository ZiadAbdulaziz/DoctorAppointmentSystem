@using DoctorAppointmentSystem.Models;
@model DoctorSchedule
@{
    Layout = "~/Views/Shared/DoctorLayout.cshtml";
}
@{
    ViewBag.Title = "EditSchedule";
}

<h2 class="text-center mt-3">Edit Schedule</h2>
<form class="form" action="/MySchedule/UpdateSchedule" method="post">
    <div class="form-group">
        <label class="form-label">Work Day</label>
        <input class="form-control" value="@Model.work_day" readonly name="workDay">

    </div>
    <div class="form-group">
        <label class="form-label">Number of patients</label>
        <input type="number" name="noPatients"class="form-control"/>
    </div>
    <input type="submit" class="btn btn-primary"/>


</form>

